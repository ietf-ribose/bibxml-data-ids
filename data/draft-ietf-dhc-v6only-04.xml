    <title>IPv6-Only-Preferred Option for DHCPv4</title>
    <seriesInfo name="Internet-Draft" value="draft-ietf-dhc-v6only-04"/>
    <author fullname="Lorenzo Colitti" initials="L." surname="Colitti">
